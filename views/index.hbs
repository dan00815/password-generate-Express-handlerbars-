<nav class="navbar navbar-expand-lg" style="background-color: bisque;">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Password Random Gererate</a>
  </div>
</nav>

<div class="back">
  <div class="main-container">
    <h2>Random Pasword Generate<i class="fa-solid fa-key"></i></h2>
    <hr />

    <form method="POST" action="/" class="g-3 ">
      <div class="mb-3 row">
        <label for="PasswordLength" class="col-sm-5 form-label">Password Length</label>
        <div class="col-sm-7">
          <input
            type="number"
            class="form-control"
            id="PasswordLength"
            name="PWDlength"
            min="4"
            max="16"
            inputmode="numeric"
            placeholder="Length is available between 4 ~ 16"
            value=
            {{#if options}}
            {{options.PWDlength}}
            {{else}}
            "4"
            {{/if}}
          />
        </div>
      </div>

      <div class="mb-3 row">
        <label for="Lowercase" class="col-sm-5 col-form-label">Include Lowercase
          Characters</label>
        <div class="col-sm-3 check-section">
          <input
            type="checkbox"
            class="form-check-input form-check-input-lg"
            id="Lowercase"
            style="font-size:1.25rem"
            name="lower"
            value="checked"
            {{#if options.lower}}checked{{/if}}
          />
          <label for="" style="margin-left: 10px;">(e.g abcdefg)</label>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="Uppercase" class="col-sm-5 col-form-label">Include Uppercase
          Characters</label>
        <div class="col-sm-3 check-section">
          <input
            type="checkbox"
            class="form-check-input form-check-input-lg"
            id="Uppercase"
            name="upper"
            value="checked"
            style="font-size:1.25rem"
            {{#if options.upper}}checked{{/if}}
          />
          <label for="" style="margin-left: 10px;">(e.g ABCDEFG)</label>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="includeNum" class="col-sm-5 col-form-label">Include Numbers</label>
        <div class="col-sm-3 check-section">
          <input
            type="checkbox"
            class="form-check-input form-check-input-lg"
            id="includeNum"
            name="number"
            value="checked"
            style="font-size:1.25rem"
            {{#if options.number}}checked{{/if}}
          />
          <label for="" style="margin-left: 10px;">(e.g 123456)</label>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="Symbols" class="col-sm-5 col-form-label">Include Symbols</label>
        <div class="col-sm-3 check-section">
          <input
            type="checkbox"
            class="form-check-input form-check-input-lg"
            id="Symbols"
            name="symbol"
            value="checked"
            style="font-size:1.25rem"
            {{#if options.symbol}}checked{{/if}}
          />
          <label for="" style="margin-left: 10px;">(e.g !@#$%^&*+-_)</label>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="excludeChr" class="col-sm-5 col-form-label">Exclude
          Characters</label>
        <div class="col-sm-7">
          <input
            type="text"
            class="form-control"
            id="excludeChr"
            name="exclude"
            value={{options.exclude}}
          >
          <div id="passwordHelpBlock" class="form-text">
            The characters will not appear in the password
          </div>
        </div>
      </div>

      <div class="mb-3 row">
        <label for="onTheFront" class="col-sm-5 col-form-label">
          Characters to put on the front</label>
        <div class="col-sm-7">
          <input
            type="text"
            class="form-control"
            id="onTheFront"
            name="frontWord"
            value={{options.frontWord}}
          >
          <div id="passwordHelpBlock" class="form-text">
            The password will start with these characters
          </div>
        </div>
      </div>

      <div class="row mx-sm-1" 
        {{#if showResult}}
        style="display:initial"
        {{else}}
        style="display:none"
        {{/if}}>
        <div class="alert alert-info" role="alert" >
          Your password is:
          <span style="color:red">{{PWDResult}}</span>
        </div>
      </div>

      <button type="submit" class="btn btn-success">Generate PasswordÔºÅ</button>
    </form>
  </div>
</div>

